<p class="text-success"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center border-bottom mb-5">
  <h1>Contacts</h1>
  <div class="d-flex justify-content-between">
    <%= link_to "New Contact", new_contact_path, class: "btn btn-primary me-2" %>
    <% if current_user %>
      <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
    <% else %>
      <%= link_to "Sign In", new_user_session_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<% if current_user %>
  <div id="contacts" class="list-group">
    <% @contacts.each do |contact| %>
      <div class="list-group-item">
        <%= render contact %>
        <div class="mt-2">
          <%= link_to "Edit", edit_contact_path(contact), class: "btn btn-sm btn-primary" %>
          <%= link_to "Destroy", contact, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger ms-2" %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <h3>Please sign in to view your contacts</h3>
<% end %>
